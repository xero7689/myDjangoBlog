a:link {color:Black; text-decoration: none;}    /* unvisited link */
a:visited {color:Black;} /* visited link */
a:hover {color:Black;}   /* mouse over link */
a:active {color:Black;}  /* selected link */

body
{
	background-color: #F0F0F0 ;
	font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
}

#main
{
	/*background-color: Pink;*/
	position: relative;
	left:20%;
	
	width: 1366px;
	height: 100%;
}

#topPanel
{
	/*background-color: White;*/
	position: relative;
	
	width: 100%;
	margin-left: 20px;
	padding: 10px;
	text-align: Left;
}

#blogTitle
{
	font-size: 50px;
}

#sidePanel
{
	/*background-color: Pink;*/
	position: relative;
	float: left;	
	
	width: 260px;
	margin: 5px;
	
	display: none;
}

#about
{
	background-color: White;
	box-shadow: 10px 10px 5px #B8B8B8 ;
	
	width: 220px;
	margin: 20px;
	padding: 10px;
}
#content
{
	/*background-color: Pink;*/
	position: relative;
	float: left;	
	
	
	margin: 5px;
	
	line-height: 28px;
}

div.indexPost
{
	background-color: White;
	box-shadow: 10px 10px 5px #B8B8B8 ;
	
	margin: 20px;
	padding: 20px;
	width: 600px;
	
}

div.postPost
{
	background-color: White;
	box-shadow: 10px 10px 5px #B8B8B8 ;
	
	width: 600px; 
	
	margin: 20px;
	padding: 20px;
}

#bottomPanel
{
	position: relative;
	clear: both;
	
	width: 100%;
}
